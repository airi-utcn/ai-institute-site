{
  "kind": "collectionType",
  "collectionName": "datasets",
  "info": {
    "singularName": "dataset",
    "pluralName": "datasets",
    "displayName": "Dataset"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "summary": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "source_url": {
      "type": "text"
    },
    "platform": {
      "type": "enumeration",
      "enum": [
        "dataverse",
        "github",
        "zenodo",
        "internal",
        "other"
      ],
      "default": "dataverse"
    },
    "release_year": {
      "type": "integer"
    },
    "tags": {
      "type": "json"
    },
    "files": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "files",
        "images"
      ]
    },
    "authors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "datasets"
    },
    "department": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::department.department",
      "inversedBy": "datasets"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "inversedBy": "datasets"
    },
    "publications": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::publication.publication",
      "inversedBy": "datasets"
    },
    "themes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::research-theme.research-theme",
      "inversedBy": "datasets"
    }
  }
}
