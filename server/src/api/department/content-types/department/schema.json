{
  "kind": "collectionType",
  "collectionName": "departments",
  "info": {
    "singularName": "department",
    "pluralName": "departments",
    "displayName": "Department"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "type": {
      "type": "enumeration",
      "default": "research",
      "enum": [
        "research",
        "academic",
        "support",
        "other"
      ]
    },
    "summary": {
      "type": "text"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "shared.section",
        "shared.quote",
        "shared.rich-text",
        "shared.media",
        "shared.slider"
      ]
    },
    "focusItems": {
      "type": "component",
      "component": "shared.focus-item",
      "repeatable": true
    },
    "contactLinks": {
      "type": "component",
      "component": "shared.contact-link",
      "repeatable": true
    },
    "coordinator": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::person.person"
    },
    "coCoordinator": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::person.person"
    },
    "people": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::person.person",
      "mappedBy": "department"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "mappedBy": "domains"
    },
    "publications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::publication.publication",
      "mappedBy": "domain"
    },
    "teams": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::team.team",
      "mappedBy": "department"
    }
  }
}
