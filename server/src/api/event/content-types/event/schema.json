{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    },
    "location": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "enum": ["event", "seminar", "workshop", "talk", "other"],
      "default": "event"
    },
    "ctaLabel": {
      "type": "string"
    },
    "ctaUrl": {
      "type": "string"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "shared.section",
        "shared.rich-text",
        "shared.media"
      ]
    },
    "organizers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::department.department"
    },
    "speakers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project"
    }
  }
}
