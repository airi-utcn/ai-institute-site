{
  "kind": "collectionType",
  "collectionName": "people",
  "info": {
    "singularName": "person",
    "pluralName": "people",
    "displayName": "Person",
    "description": "Staff, researchers, collaborators"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "fullName",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "default": "researcher",
      "enum": [
        "staff",
        "researcher",
        "alumni",
        "visitor",
        "visiting_researcher",
        "external"
      ]
    },
    "titles": {
      "type": "json"
    },
    "position": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "bio": {
      "type": "richtext"
    },
    "portrait": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "socialLinks": {
      "type": "component",
      "component": "shared.contact-link",
      "repeatable": true
    },
    "department": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::department.department",
      "inversedBy": "people"
    },
    "support_units": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::support-unit.support-unit",
      "mappedBy": "members"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "mappedBy": "members"
    },
    "leading_projects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project.project",
      "mappedBy": "lead"
    },
    "publications": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::publication.publication",
      "mappedBy": "authors"
    },
    "datasets": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::dataset.dataset",
      "mappedBy": "authors"
    }
  }
}
